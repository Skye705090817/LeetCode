class Solution {
public:
    int hammingDistance(int x, int y) {

        int res = 0, s = 0;
        
        for (; x > 0 && y > 0; x /= 2, y /= 2) {
            if ((x % 2) == (y % 2))
                res++;
        }
        s = x > 0 ? x : y;
        for(; s > 0; s /= 2) {
            res++;
        }
        return res;
    } 
};
